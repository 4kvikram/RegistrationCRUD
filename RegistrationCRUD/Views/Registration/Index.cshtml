@model RegistrationViewModel


<div>
    <form asp-action="Index" asp-controller="Registration">
        <div class="form-group">
            <label asp-for="@Model.Fname"></label>
           <input asp-for="@Model.Fname" class="form-control"/>
           <small><span class="text-danger" asp-validation-for="@Model.Fname"></span></small>
        </div>
         <div class="form-group">
            <label asp-for="@Model.Lname"></label>
           <input asp-for="@Model.Lname" class="form-control"/>
           <small><span class="text-danger" asp-validation-for="@Model.Lname"></span></small>
        </div>
         <div class="form-group">
            <label asp-for="@Model.Address"></label>
           <input asp-for="@Model.Address" class="form-control"/>
           <small><span class="text-danger" asp-validation-for="@Model.Address"></span></small>
        </div>
         <div class="form-group">
            <label asp-for="@Model.Dob"></label>
           <input asp-for="@Model.Dob" class="form-control"/>
           <small><span class="text-danger" asp-validation-for="@Model.Dob"></span></small>
        </div>
         <div class="form-group">
            <label asp-for="@Model.Gender"></label>
           Male :<input asp-for="@Model.Gender" class="" type="radio" value="1"/>
           Female: <input asp-for="@Model.Gender" class="" type="radio" value="1"/>
           <small><span class="text-danger" asp-validation-for="@Model.Dob"></span></small>
        </div>

         <div class="form-group">
            <label asp-for="@Model.City"></label>

           <select asp-for="@Model.City" class="form-control">
               <option value="0">--Select--</option>
               
               <option value="1">Delhi </option>
               <option value="2">Noida </option>
               <option value="3">Mumbai </option>
           </select>
           <small><span class="text-danger" asp-validation-for="@Model.City"></span></small>
        </div>

    @*     <div class="form-group">
            <label asp-for="@Model.Image"></label>
           <input  class="form-control" type="file" accept="image/*"/>
           <small><span class="text-danger" ></span></small>
        </div>*@

         <div class="form-group">
            <label asp-for="@Model.Password"></label>
           <input asp-for="@Model.Password" class="form-control"/>
           <small><span class="text-danger" asp-validation-for="@Model.Password"></span></small>
        </div>

         <div class="form-group">
           <button type="submit">Submit</button>
        </div>
    </form>
</div>